<div class="card bg-light">
    <div class="card-body">
        <h3>Novo livro</h3>
        <form action="/admin/novoLivro" method="POST"  enctype="multipart/form-data">
            <label for="titulo">Título:</label>
                <input type="text" name="titulo" class="form-control" required>
            <label for="autor">Autor:</label>
                <input type="text" name="autor" class="form-control" required>
            <label for="ano">Ano de publicação:</label>
                <input type="number"  step="1" name="ano" class="form-control" required>
            <label for="sinopse">Sinopse:</label>
                <textarea name="sinopse" class="form-control"></textarea>
            <label for="capa">Capa:</label>
                <input type="file" class="form-control" id="inputGroupFile02" name="capa" accept="image/png, image/jpeg" value=""> 
            <button type="submit" class="btn "  style="background-color: #00CC99; margin-top: 15px;">Novo Livro</button>
            
        </form>
    </div>
</div>